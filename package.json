{
  "name": "airlink-panel",
  "version": "1.0.0",
  "description": "Airlink is a simple-to-use game server management panel",
  "main": "dist/app.js",
  "keywords": ["game server", "management", "panel"],
  "author": "AirlinkLab",
  "license": "MIT",
  "scripts": {
    "build:css": "tailwindcss build src/public/styles.css -c tailwind.config.js -o dist/public/styles.css",
    "build:css:watch": "tailwindcss build src/public/styles.css -c tailwind.config.js -o dist/public/styles.css --watch",
    "build": "ts-node ./src/cmd/build.ts",
    "start": "node dist/app.js",
    "clean": "ts-node ./src/cmd/clean.ts",
    "start:dev": "nodemon",
    "format": "prettier --write src/",
    "migrate:dev": "npx prisma migrate dev --name init && npx prisma generate",
    "migrate:deploy": "npx prisma migrate deploy && npx prisma generate"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.8.6",
    "copyfiles": "^2.4.1",
    "fs-extra": "^11.2.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "tailwindcss": "^3.4.14",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@prisma/client": "^5.21.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "winston": "^3.16.0"
  }
}
