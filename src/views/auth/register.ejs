<%- include('../components/header', { title: 'Register' }) %>
<main class="bg-neutral-900 h-screen w-screen flex items-center justify-center">
    <div class="bg-black/20 h-auto flex flex-col items-center justify-center p-8 w-1/4 m-5 border border-neutral-200/20 rounded-2xl shadow-lg">
        <h1 class="text-white text-2xl font-semibold mb-6">Create an account!</h1>

        <!-- Error message display -->
        <% if (errorMessage) { %>
            <div class="bg-red-600 text-white p-3 rounded-lg mb-4 w-full text-center">
                <%= errorMessage %>
            </div>
        <% } %>

        <form class="w-full" action="/register" method="POST">
            <div class="mb-4">
                <label for="username" class="block text-white mb-1">Username</label>
                <input type="text" id="username" name="username" class="w-full p-2 border border-neutral-600 rounded-lg bg-neutral-800 text-white focus:outline-none focus:border-blue-500" required>
            </div>
            <div class="mb-4">
                <label for="email" class="block text-white mb-1">Email</label>
                <input type="email" id="email" name="email" class="w-full p-2 border border-neutral-600 rounded-lg bg-neutral-800 text-white focus:outline-none focus:border-blue-500" required>
            </div>
            <div class="mb-4">
                <label for="password" class="block text-white mb-1">Password</label>
                <input type="password" id="password" name="password" class="w-full p-2 border border-neutral-600 rounded-lg bg-neutral-800 text-white focus:outline-none focus:border-blue-500" required>
            </div>
            <button type="submit" class="w-full p-2 bg-neutral-100 hover:bg-neutral-300 rounded-lg text-neutral-800 font-semibold transition duration-200">Register</button>
        </form>
        <p class="mt-4 text-white text-sm">Already have an account? <a href="/login" class="text-blue-400 hover:underline">Login</a></p>
    </div>
</main>
<%- include('../components/footer') %>
